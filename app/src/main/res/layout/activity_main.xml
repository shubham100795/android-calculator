<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.myproject.MainActivity"
    android:orientation="vertical"
    android:background="#000000">
    <TextView
        android:id="@+id/textview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#000000"
        android:gravity="bottom"
        android:textSize="35sp"
        android:textColor="#FFFFFF"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal">
        <View
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="5"
            android:background="#263238"
            android:layout_margin="0.5dp"/>
        <Button
            android:id="@+id/del"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2.5"
            android:text="DELETE"
            android:background="#EF6C00"
            android:textColor="#000000"
            android:layout_margin="0.5dp"
            android:textSize="15sp"
            android:onClick="delete"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2.5"
            android:text="RESET"
            android:background="#EF6C00"
            android:textColor="#000000"
            android:layout_margin="0.5dp"
            android:textSize="15sp"
            android:onClick="reset"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00838F"
            android:textColor="#FFFFFF"
            android:text="7"
            android:textSize="30sp"
            android:padding="20dp"
            android:layout_margin="0.5dp"
            android:onClick="fseven"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00838F"
            android:textColor="#FFFFFF"
            android:text="8"
            android:layout_margin="0.5dp"
            android:textSize="30sp"
            android:padding="20dp"
            android:onClick="feight"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00838F"
            android:textColor="#FFFFFF"
            android:text="9"
            android:layout_margin="0.5dp"
            android:textSize="30sp"
            android:padding="20dp"
            android:onClick="fnine"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#EF6C00"
            android:textColor="#000000"
            android:text="/"
            android:layout_margin="0.5dp"
            android:textSize="30sp"
            android:padding="20dp"
            android:onClick="fdivide"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00838F"
            android:textColor="#FFFFFF"
            android:text="4"
            android:layout_margin="0.5dp"
            android:textSize="30sp"
            android:padding="20dp"
            android:onClick="ffour"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00838F"
            android:textColor="#FFFFFF"
            android:text="5"
            android:layout_margin="0.5dp"
            android:textSize="30sp"
            android:padding="20dp"
            android:onClick="ffive"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00838F"
            android:textColor="#FFFFFF"
            android:text="6"
            android:layout_margin="0.5dp"
            android:textSize="30sp"
            android:padding="20dp"
            android:onClick="fsix"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#EF6C00"
            android:textColor="#000000"
            android:text="*"
            android:layout_margin="0.5dp"
            android:textSize="30sp"
            android:padding="20dp"
            android:onClick="fmulti"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00838F"
            android:textColor="#FFFFFF"
            android:text="1"
            android:layout_margin="0.5dp"
            android:textSize="30sp"
            android:padding="20dp"
            android:onClick="fone"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00838F"
            android:textColor="#FFFFFF"
            android:text="2"
            android:layout_margin="0.5dp"
            android:textSize="30sp"
            android:padding="20dp"
            android:onClick="ftwo"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00838F"
            android:textColor="#FFFFFF"
            android:text="3"
            android:layout_margin="0.5dp"
            android:textSize="30sp"
            android:padding="20dp"
            android:onClick="fthree"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#EF6C00"
            android:textColor="#000000"
            android:text="-"
            android:layout_margin="0.5dp"
            android:textSize="30sp"
            android:padding="20dp"
            android:onClick="fminus"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00838F"
            android:textColor="#FFFFFF"
            android:text="."
            android:layout_margin="0.5dp"
            android:textSize="30sp"
            android:padding="20dp"
            android:onClick="fperiod"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00838F"
            android:textColor="#FFFFFF"
            android:text="0"
            android:layout_margin="0.5dp"
            android:textSize="30sp"
            android:padding="20dp"
            android:onClick="fzero"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#EF6C00"
            android:textColor="#000000"
            android:text="="
            android:layout_margin="0.5dp"
            android:textSize="30sp"
            android:padding="20dp"
            android:onClick="fequal"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#EF6C00"
            android:textColor="#000000"
            android:text="+"
            android:layout_margin="0.5dp"
            android:textSize="30sp"
            android:padding="20dp"
            android:onClick="fplus"
            />
    </LinearLayout>

</LinearLayout>
